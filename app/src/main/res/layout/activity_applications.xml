<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
        android:id="@+id/acceptContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/acceptTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="승인"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="16dp"/>
        <ListView
            android:id="@+id/acceptListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp" />

        </LinearLayout>

    <LinearLayout
        android:id="@+id/reviewingContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/reviewingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="검토중"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="16dp" />

        <ListView
            android:id="@+id/reviewingListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/refusalContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/refusalTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="거부"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="16dp" />

        <ListView
            android:id="@+id/refusalListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp" />

    </LinearLayout>
    </LinearLayout>

</ScrollView>
